<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:exported="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/botonAtras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATRAS" />


            <jp.co.cyberagent.android.gpuimage.GPUImageView
                android:id="@+id/gpuimageview"
                android:layout_width="196dp"
                android:layout_height="193dp"
                app:gpuimage_show_loading="false"
                app:gpuimage_surface_type="texture_view" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gaussian Blur"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/restablecerGau"
                    android:layout_width="54dp"
                    android:layout_height="36dp"
                    android:text="X">
                </Button>

                <SeekBar
                    android:id="@+id/seekbarGaussian"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:max="60"
                    android:progress="0" />

                <TextView
                    android:id="@+id/textViewGau"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vivacidad"></TextView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/restablecerViv"
                    android:layout_width="54dp"
                    android:layout_height="36dp"
                    android:text="X">
                </Button>

                <SeekBar
                    android:id="@+id/seekbarVivacidad"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:max="60"
                    android:progress="30" />

                <TextView
                    android:id="@+id/textViewViv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Punto negro"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/restablecerGamma"
                    android:layout_width="54dp"
                    android:layout_height="36dp"
                    android:text="X">
                </Button>

                <SeekBar
                    android:id="@+id/seekbarGamma"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:max="60"
                    android:progress="30" />

                <TextView
                    android:id="@+id/textViewGamma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reflejo esfera"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/restablecerEsfera"
                    android:layout_width="54dp"
                    android:layout_height="36dp"
                    android:text="X">
                </Button>

                <SeekBar
                    android:id="@+id/seekbarEsfera"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:max="60"
                    android:progress="30" />

                <TextView
                    android:id="@+id/textViewEsfera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

            <Button
                android:id="@+id/botonGuardar"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="GUARDAR" />

            <Button
                android:id="@+id/botonDobleExposicion"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="DOBLE EXPOSICIÃ“N" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>